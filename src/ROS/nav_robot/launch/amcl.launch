<launch>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find nav_robot)/map/LabmapExtended_edited.yaml" />
  <include file="$(find amcl)/examples/amcl_diff.launch"/> 
  <arg name="no_static_map" default="false"/>
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!--<rosparam file="$(find nav_robot)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find nav_robot)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find nav_robot)/param/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find nav_robot)/param/global_costmap_params.yaml" command="load"/>
    <rosparam file="$(find nav_robot)/param/global_costmap_params.yaml" command="load"/>--> 
    <rosparam file="$(find nav_robot)/param/base_local_planner_params.yaml" command="load" />   

    <!-- observation sources located in costmap_common.yaml -->
    <rosparam file="$(find nav_robot)/param/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find nav_robot)/param/costmap_common.yaml" command="load" ns="local_costmap" />

    <!-- local costmap, needs size -->
    <rosparam file="$(find nav_robot)/param/costmap_local.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width" value="2.0"/>
    <param name="local_costmap/height" value="2.0"/>

    <!-- static global costmap, static map provides size -->
    <rosparam file="$(find nav_robot)/param/costmap_global_static.yaml" command="load" ns="global_costmap" unless="$(arg no_static_map)"/>
    
    <!-- global costmap with laser, for odom_navigation_demo -->
    <rosparam file="$(find nav_robot)/param/costmap_global_laser.yaml" command="load" ns="global_costmap" if="$(arg no_static_map)"/>
    <param name="global_costmap/width" value="100.0" if="$(arg no_static_map)"/>
    <param name="global_costmap/height" value="100.0" if="$(arg no_static_map)"/>

    <rosparam file="$(find nav_robot)/param/global_planner_params.yaml" command="load" />
    <rosparam file="$(find nav_robot)/param/navfn_global_planner_params.yaml" command="load" />
  </node>   
</launch>
